.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to 'Sample Theme', home_path, class: 'brand'
      = menu_tree_page(home: true, wrapper: false, ul_class: 'nav', li_wrapper: false)

      %ul.nav.pull-right
        - if current_user
          %li.dropdown
            = link_to (current_user.email + ' <b class="caret"></b>'.html_safe).html_safe, '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown'
            %ul.dropdown-menu
              %li
                = link_to "Edit profile", '/'
              %li.divider
              %li
                = link_to t('sign_out'), destroy_user_session_path, :method => :delete
        - else
          = link_to icon('signin', t('sign_up')), new_user_registration_path, class: 'btn btn-success nav'
          = link_to icon('twitter', t('sign_in')), '/auth/twitter', class: 'btn nav'
          = link_to icon('signin', t('sign_in')), new_user_session_path, class: 'btn btn-primary nav'



